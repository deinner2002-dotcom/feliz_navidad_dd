<script>
const music=document.getElementById("music");

function startJourney(){
  music.play();
  document.body.style.background="white";
  changeScene(1,2);
  startMessages();
}

function changeScene(from,to){
  document.getElementById("scene"+from).classList.remove("active");
  document.getElementById("scene"+to).classList.add("active");
}

const messages=[
  {text:"Este viaje es solo para ti ‚ù§Ô∏è",img:"https://via.placeholder.com/600"},
  {text:"Gracias por existir ‚ú®",img:"https://via.placeholder.com/600"},
  {text:"Cada momento contigo es magia üéÑ",img:"https://via.placeholder.com/600"},
  {text:"Eres mi regalo favorito üéÅ",img:"https://via.placeholder.com/600"},
  {text:"Te pienso siempre üí≠",img:"https://via.placeholder.com/600"},
  {text:"Eres mi hogar üè†",img:"https://via.placeholder.com/600"},
  {text:"Y esto es solo el comienzo üíñ",img:"https://via.placeholder.com/600"}
];

let i=0;
function startMessages(){
  if(i>=messages.length){
    changeScene(2,3);
    return;
  }
  const box=document.getElementById("textBox");
  const photo=document.getElementById("photoBox");
  box.innerText=messages[i].text;
  photo.style.display="none";

  setTimeout(()=>{
    box.innerText="";
    photo.src=messages[i].img;
    photo.style.display="block";
    i++;
    setTimeout(startMessages,15000);
  },15000);
}

document.getElementById("gift").onclick=()=>{
  changeScene(3,4);
};
</script>

